<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >


    <FrameLayout
        android:id="@+id/roads"
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="horizontal">

        <!-- left-->

        <FrameLayout
            android:id="@+id/highway1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/highway"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:layout_gravity="top|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="150dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />
        </FrameLayout>


        <!--middle-->

        <FrameLayout
            android:id="@+id/highway2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="125dp"
            android:orientation="horizontal"
            android:background="@drawable/highway">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="56dp"
                android:layout_gravity="top|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone23"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="150dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone24"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />
        </FrameLayout>


        <!--right-->

        <FrameLayout
            android:id="@+id/highway3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="250dp"
            android:layout_weight="1"
            android:background="@drawable/highway"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone32"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="56dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone31"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone33"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="150dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/stone34"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:visibility="invisible"
                app:srcCompat="@drawable/stone" />
        </FrameLayout>


    </FrameLayout>




    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="500dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/car1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="52dp"
            android:visibility="visible"
            app:srcCompat="@drawable/car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car3"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/car" />


    </LinearLayout>


    <!--the heart and arrow-->

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="600dp"
        android:paddingLeft="50dp"
        android:paddingRight="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_IMG_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/left"
            app:iconGravity="textStart"
            app:iconSize="80dp"
            app:iconTint="@null"
            android:contentDescription="left"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_IMG_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="200dp"
            app:icon="@drawable/right"
            app:iconGravity="textStart"
            app:iconSize="80dp"
            app:iconTint="@null"
            android:contentDescription="right"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_iconheart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            app:srcCompat="@drawable/ic_iconheart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_iconheart" />

    </LinearLayout>


</RelativeLayout>